# Environment Configuration Example
# Copy this file to .env and modify as needed

# Environment
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Database Configuration
DATABASE_URL=sqlite:///./containers.db

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Container Management
CONTAINERS_BASE_DIR=./containers
MAX_CONTAINERS=10
DEFAULT_CONTAINER_TIMEOUT=3600

# Resource Monitoring
MONITORING_INTERVAL=5.0
MONITORING_HISTORY_HOURS=24

# WebSocket Configuration
WEBSOCKET_BROADCAST_INTERVAL=2.0

# ML Training Paths
ML_MODELS_PATH=../models
ML_VIDEOS_PATH=../video
ML_LOGS_PATH=../logs

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# Resource Limits
DEFAULT_CPU_CORES=2.0
DEFAULT_MEMORY_GB=4.0
DEFAULT_DISK_SPACE_GB=10.0
MAX_CPU_CORES=16.0
MAX_MEMORY_GB=64.0
MAX_DISK_SPACE_GB=500.0

# GPU Configuration
GPU_ENABLED=true
MAX_GPU_MEMORY_GB=24.0

# Video Streaming
VIDEO_STREAMING_ENABLED=true
VIDEO_STREAM_PORT_START=8100
VIDEO_STREAM_PORT_END=8200

# Development
DEBUG=false
TESTING=false
